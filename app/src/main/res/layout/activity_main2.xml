<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="学生认证系统"
        android:textSize="30dp"

        />


    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:background="@drawable/edishap"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="查询方式"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/queryMethod"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="选择查询方式"
                android:onClick="click1" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="学号"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入学号"
                android:textStyle="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="姓名"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入姓名" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="学院"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuCollege"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="请输入学院" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"

                android:text="班级"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuClass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="请输入班级" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"

                android:text="宿舍楼"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuDormitory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="请输入宿舍楼" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="宿舍号"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stuDorm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="请输入宿舍门牌号" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/selectBtn"
        android:layout_width="352dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:onClick="onSelect1"
        android:text="查询"
        android:textColor="@color/button1"
        android:textSize="28dp" />

</LinearLayout>







